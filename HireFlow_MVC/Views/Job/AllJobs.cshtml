@model IEnumerable<HireFlow_MVC.Models.JobViewModel>

<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

<div class="p-6">
    <h1 class="text-2xl font-bold mb-6">Available Jobs</h1>

    @if (!Model.Any())
    {
        <p class="text-gray-500">No jobs found.</p>
    }
    else
    {
        <div class="grid sm:grid-cols-2 xl:grid-cols-3 gap-6">
            @foreach (var job in Model)
            {
                <div class="bg-white p-6 rounded-2xl shadow hover:shadow-lg border hover:border-indigo-300 transition">
                    <h2 class="text-lg font-bold text-gray-800">@job.JobTitle</h2>
                    <p class="text-sm text-gray-600 mb-2">
                        📍 @job.Location &bull; ₹@job.Salary &bull; @job.Department
                    </p>
                    <p class="text-gray-700 text-sm mb-4">
                        @(string.IsNullOrWhiteSpace(job.JobDescription) ? "No description provided." : job.JobDescription)
                    </p>
                    <a href="@Url.Action("Details", "Jobs", new { id = job.JobId })"
                       class="text-indigo-600 font-medium hover:underline">
                        View Details →
                    </a>
                </div>
            }
        </div>
    }
</div>
