                        <option value="">Select education</option>
                        <option value="high-school">High School</option>
                        <option value="associate">Associate Degree</option>
                        <option value="bachelor">Bachelor's Degree</option>
                        <option value="master">Master's Degree</option>
                        <option value="phd">PhD</option>
                    </select>
                </div>

                <div class="form-group full-width">
                    <label for="cover-letter" class="form-label">Cover Letter</label>
                    <textarea id="cover-letter" class="form-textarea" placeholder="Why are you interested in this position?" required></textarea>
                </div>

                <div class="form-group full-width">
                    <label class="form-label">Upload Resume</label>
                    <div class="file-upload">
                        <input type="file" id="resume" class="file-upload-input" accept=".pdf,.doc,.docx" required>
                        <label for="resume" class="file-upload-label">
                            <i class="fas fa-cloud-upload-alt file-upload-icon"></i>
                            <span class="file-upload-text">Drop your resume here or <strong>browse</strong></span>
                            <span class="file-upload-text">Max file size: 5MB (PDF, DOC, DOCX)</span>
                        </label>
                    </div>
                </div>

                <button type="submit" class="form-submit">Submit Application</button>
            </form>
