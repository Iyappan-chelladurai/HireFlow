        // Mobile menu toggle
        document.querySelector('.mobile-toggle').addEventListener('click', function() {
            const navMenu = document.querySelector('.nav-menu');
            navMenu.style.display = navMenu.style.display === 'flex' ? 'none' : 'flex';
        });

        // Application modal functionality
        const applyButtons = document.querySelectorAll('.apply-btn');
        const applicationModal = document.getElementById('application-modal');
        const modalJobTitle = document.getElementById('modal-job-title');
        const positionApplied = document.getElementById('position-applied');
        const modalClose = document.querySelector('.modal-close');

        applyButtons.forEach(button => {
            button.addEventListener('click', function(e) {
                e.preventDefault();
                const jobTitle = this.getAttribute('data-job');
                modalJobTitle.textContent = jobTitle;
                positionApplied.value = jobTitle;
                applicationModal.classList.add('active');
                document.body.style.overflow = 'hidden';
            });
        });

        modalClose.addEventListener('click', function() {
            applicationModal.classList.remove('active');
            document.body.style.overflow = 'auto';
        });

        applicationModal.addEventListener('click', function(e) {
            if (e.target === applicationModal) {
                applicationModal.classList.remove('active');
                document.body.style.overflow = 'auto';
            }
        });

        // Form submission
        const applicationForm = document.getElementById('job-application-form');

        applicationForm.addEventListener('submit', function(e) {
            e.preventDefault();

            // Here you would typically send the form data to a server
            // For this example, we'll just show an alert and close the modal

            alert('Application submitted successfully!');
            applicationModal.classList.remove('active');
            document.body.style.overflow = 'auto';
            applicationForm.reset();
        });

        // File upload styling
        const fileInput = document.getElementById('resume');
        const fileUploadText = document.querySelector('.file-upload-text');

        fileInput.addEventListener('change', function() {
            if (this.files && this.files[0]) {
                fileUploadText.textContent = this.files[0].name;
            }
        });


                // Account dropdown toggle (for mobile)
        const accountToggle = document.querySelector('.account-toggle');
        const accountNav = document.querySelector('.account-nav');

        accountToggle.addEventListener('click', function(e) {
            e.preventDefault();
            accountNav.classList.toggle('active');
        });
    </script>
