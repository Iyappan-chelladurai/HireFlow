                $(document).ready(function () {

            // Open Schedule Interview modal
            $("#scheduleInterviewBtn").click(function () {
                $("#scheduleInterviewModal").addClass("active");
            });

            // Close modal
            $(".modal-close, #cancelScheduleBtn").click(function () {
                $("#scheduleInterviewModal").removeClass("active");
            });

            // Optional: Close modal when clicking outside modal content
            $("#scheduleInterviewModal").click(function (e) {
                if ($(e.target).is("#scheduleInterviewModal")) {
                    $(this).removeClass("active");
                }
            });

            // Time slot selection
            $(".time-slot").click(function () {
                $(".time-slot").removeClass("selected");
                $(this).addClass("selected");
                $(this).find("input[type=radio]").prop("checked", true);
            });

        });

             $(document).ready(function () {

            // =========================
            // 1️⃣ Load Candidates
            // =========================
            function loadCandidates() {
                $.getJSON("https://localhost:7180/api/JobApplications/GetCandidatesForDropdown", function (candidates) {
                    let options = '<option value="">Choose candidate...</option>';
                    $.each(candidates, function (i, c) {
                           console.log(candidates);
                       // alert(i.ApplicationId);
                        options += `<option value="${c.applicationId}">${c.candidateName} - ${c.jobTitle}</option>`;
                    });
                    $("#candidateSelect").html(options);
                });
            }

            // =========================
            // 2️⃣ Load Interviewers
            // =========================
            function loadInterviewers() {
                $.getJSON("https://localhost:7180/api/JobApplications/interviewers-dropdown", function (interviewers) {
                    let options = '<option value="">Choose interviewer...</option>';

                    
                    $.each(interviewers, function (i, intv) {
                        console.log(interviewers);
                        options += `<option value="${intv.userId}">${intv.fullName} (${intv.role})</option>`;
                    });
                    $("#interviewerSelect").html(options);
                });
            }

            // =========================
            // 3️⃣ Load Upcoming Interviews
            // =========================
            function loadUpcomingInterviews() {
                $.getJSON("/api/InterviewSchedules?status=Scheduled", function (interviews) {
                    let rows = "";
                    $.each(interviews, function (i, iv) {
                        rows += `
                        <tr>
                            <td>
                                <div style="display:flex; align-items:center;">
                                    <img src="https://via.placeholder.com/40" class="rounded-circle" style="margin-right:12px;">
                                    <div>${iv.candidate}</div>
                                </div>
                            </td>
                            <td>${iv.position}</td>
                            <td>${iv.interviewer}</td>
                            <td>${new Date(iv.dateTime).toLocaleDateString()}<br>
                                <small>${new Date(iv.dateTime).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' })}</small>
                            </td>
                            <td><span class="interview-type-badge" style="background-color: ${iv.type=="Technical"?"#2563eb":"#7e22ce"}; color:white;">${iv.type}</span></td>
                            <td><span class="status-badge badge-warning">${iv.status}</span></td>
                            <td>
                                <div style="display:flex; gap:8px;">
                                    <button class="btn btn-outline detailsBtn" data-id="${iv.id}">Details</button>
                                    <button class="btn btn-outline rescheduleBtn" data-id="${iv.id}">Reschedule</button>
                                </div>
                            </td>
                        </tr>`;
                    });
                    $("#upcomingInterviewsTable tbody").html(rows);
                });
            }

            // =========================
            // 4️⃣ Load Completed Interviews
            // =========================
            function loadCompletedInterviews() {
                $.getJSON("/api/InterviewSchedules?status=Completed", function (interviews) {
                    let rows = "";
                    $.each(interviews, function (i, iv) {
                        rows += `
                        <tr>
                            <td>${iv.candidate}</td>
                            <td>${iv.position}</td>
                            <td>${iv.interviewer}</td>
                            <td>${new Date(iv.dateTime).toLocaleDateString()}<br>
                                <small>${new Date(iv.dateTime).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' })}</small>
                            </td>
                            <td><span class="interview-type-badge" style="background-color: ${iv.type=="Technical"?"#2563eb":"#7e22ce"}; color:white;">${iv.type}</span></td>
                            <td><span class="status-badge badge-success">${iv.status}</span></td>
                        </tr>`;
                    });
                    $("#completedInterviewsTable tbody").html(rows);
                });
            }

            // =========================
            // 5️⃣ Time Slot Selection
            // =========================
            $(document).on("click", ".time-slot", function () {
                $(".time-slot").removeClass("selected");
                $(this).addClass("selected");
                $(this).find("input[type='radio']").prop("checked", true);
            });

            // =========================
            // 6️⃣ Schedule Interview
            // =========================
            $("#scheduleInterviewModal .btn-primary").on("click", function () {
                const candidateId = $("#candidateSelect").val();
                const interviewerName = $("#interviewerSelect option:selected").text();
                const interviewMode = $("#interviewType option:selected").text();
                const meetingLink = $("#interviewLocation").val();
                const date = $("#interviewDate").val();
                 const roundNumber = $("#interviewType option:selected").val();
                const selectedSlot = $(".time-slot.selected label").text().trim();

                if (!candidateId || !date || !selectedSlot) {
                    alert("⚠️ Please fill in all required fields!");
                    return;
                }

                      const dateTimeStr = date + " " + selectedSlot.split(" - ")[0];
        const scheduledDate = new Date(dateTimeStr); // no .toISOString()


                const payload = {
                    applicationId: candidateId,
                    roundNumber: roundNumber,
                    scheduledDate: scheduledDate,
                    interviewerName: interviewerName,
                    interviewMode: interviewMode,
                    meetingLink: meetingLink,
                    status: "Scheduled"
                };

                $.ajax({
                    url: "https://localhost:7180/api/interviews/schedule",
                    method: "POST",
                    contentType: "application/json",
                    data: JSON.stringify(payload),
                    success: function () {
                        alert("✅ Interview scheduled successfully!");
                        $("#scheduleInterviewModal").modal("hide");
                        $("form")[0].reset();
                        $(".time-slot").removeClass("selected");
                        loadUpcomingInterviews();
                    },
                    error: function (xhr) {
                        console.error(xhr.responseText);
                        alert("❌ Failed to schedule interview. Check console.");
                    }
                });
            });

            // =========================
            // 7️⃣ Initialize everything
            // =========================
            loadCandidates();
            loadInterviewers();
            loadUpcomingInterviews();
            loadCompletedInterviews();

        });


    </script>
