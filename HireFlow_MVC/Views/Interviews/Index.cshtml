                                <th>Date & Time</th>
                                <th>Type</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                         
              
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Interview Calendar & Completed Interviews -->
            <div style="display: grid; grid-template-columns: 2fr 1fr; gap: 30px;">
                <div>
                    <div class="dashboard-card">
                        <div class="card-header">
                            <h3 class="card-title">Interview Calendar</h3>
                        </div>

                        <div style="padding: 20px;">
                            <div style="display: flex; justify-content: space-between; margin-bottom: 20px;">
                                <button id="prevMonthBtn" class="btn btn-outline">
                                    <i class="fas fa-chevron-left"></i> Previous
                                </button>

                                <h4 id="calendarTitle" style="margin: 0;"></h4>

                                <button id="nextMonthBtn" class="btn btn-outline">
                                    Next <i class="fas fa-chevron-right"></i>
                                </button>
                            </div>

                            <div style="overflow-x: auto;">
                                <table style="width: 100%; border-collapse: collapse;">
                                    <thead>
                                        <tr>
                                            <th style="text-align: center; padding: 10px; background-color: #f8fafc; border: 1px solid #e2e8f0;">Sun</th>
                                            <th style="text-align: center; padding: 10px; background-color: #f8fafc; border: 1px solid #e2e8f0;">Mon</th>
                                            <th style="text-align: center; padding: 10px;background-color: #f8fafc; border: 1px solid #e2e8f0;">Tue</th>
                                            <th style="text-align: center; padding: 10px;background-color: #f8fafc; border: 1px solid #e2e8f0;">Wed</th>
                                            <th style="text-align: center; padding: 10px;background-color: #f8fafc; border: 1px solid #e2e8f0;">Thu</th>
                                            <th style="text-align: center; padding: 10px;background-color: #f8fafc; border: 1px solid #e2e8f0;">Fri</th>
                                            <th style="text-align: center; padding: 10px;background-color: #f8fafc; border: 1px solid #e2e8f0;">Sat</th>
                                        </tr>
                                    </thead>

                                    <tbody id="calendarBody"></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>


                <div>
                    <div class="dashboard-card">
                        <div class="card-header">
                            <h3 class="card-title">Completed Interviews</h3>
                        </div>
                        <div id="completedInterviewsContainer" style="padding: 20px;">
                            <!-- Dynamic Data Will Load Here -->
                        </div>
                    </div>


                    <div class="dashboard-card">
                        <div class="card-header">
                            <h3 class="card-title">Interview Statistics</h3>
                        </div>
                        <div style="padding: 20px;">
                            <div style="margin-bottom: 20px;">
                                <div style="display: flex; justify-content: space-between; margin-bottom: 8px;">
                                    <span>Scheduled Interviews</span>
