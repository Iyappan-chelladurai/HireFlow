            $.ajax({
                url: "https://localhost:7180/Interview/GenerateInterviewQA",
                type: "POST",
                contentType: "application/json",
                data: JSON.stringify(interviewId), // send the Guid directly
                success: function (response) {
                    // Handle stringified or parsed responses
                    let questions = [];

                    if (typeof response === "string") {
                        try {
                            questions = JSON.parse(response);
                        } catch {
                            console.error("Invalid response JSON:", response);
                        }
                    } else if (Array.isArray(response)) {
                        questions = response;
                    } else if (response.questionsAndAnswers) {
                        // if your API wraps the questions
                        questions = JSON.parse(response.questionsAndAnswers);
                    }

                    if (questions.length > 0) {
                        displayQuestions(questions);
                        updateQuestionStats(questions);
                    } else {
                        showSampleQuestions();
                    }
                },
                error: function (xhr) {
                    console.error("Error loading interview questions:", xhr);
                    showSampleQuestions();
                }
            });
        }


        // Function to display questions in the modal
        function displayQuestions(questions) {
            const questionsList = $("#questionsList");
            questionsList.empty();

            if (questions.length === 0) {
                questionsList.html(`
                    <div class="no-questions">
                        <i class="fas fa-inbox" style="font-size: 3rem; color: #e2e8f0; margin-bottom: 15px;"></i>
                        <p style="color: var(--gray); text-align: center;">No questions available for this interview.</p>
                    </div>
                `);
                return;
            }

            questions.forEach((question, index) => {
                const difficultyClass = getDifficultyClass(question.difficulty);
                const categoryClass = question.category?.toLowerCase() || 'technical';

                const questionItem = `
                    <div class="question-item ${categoryClass}" data-category="${categoryClass}">
                        <div class="question-header">
                            <span class="question-number">Q${index + 1}</span>
                            <span class="question-category ${categoryClass}">${question.category || 'Technical'}</span>
                        </div>
                        <div class="question-text">${question.questionText}</div>
                        <div class="question-difficulty">
                            <span class="difficulty-dot ${difficultyClass}"></span>
                            <span>${question.difficulty || 'Medium'} difficulty</span>
                        </div>
                        ${question.tags ? `
                        <div class="question-tags">
                            ${question.tags.map(tag => `<span class="question-tag">${tag}</span>`).join('')}
                        </div>
                        ` : ''}
                    </div>
                `;

                questionsList.append(questionItem);
            });
        }

