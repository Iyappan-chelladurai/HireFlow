            btn.addEventListener('click', openModal);
        });

        modalClose.addEventListener('click', closeModal);

        candidateProfileModal.addEventListener('click', function(e) {
            if (e.target === candidateProfileModal) {
                closeModal();
            }
        });

        // Simple JavaScript for sidebar toggle on mobile
        if (window.innerWidth < 576) {
            document.querySelector('.sidebar').style.display = 'none';

            // Create a toggle button for sidebar
            const toggleSidebar = document.createElement('button');
            toggleSidebar.innerHTML = '<i class="fas fa-bars"></i>';
            toggleSidebar.style.position = 'fixed';
            toggleSidebar.style.bottom = '20px';
            toggleSidebar.style.right = '20px';
            toggleSidebar.style.zIndex = '1000';
            toggleSidebar.style.width = '50px';
            toggleSidebar.style.height = '50px';
            toggleSidebar.style.borderRadius = '50%';
            toggleSidebar.style.background = 'linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%)';
            toggleSidebar.style.color = 'white';
            toggleSidebar.style.border = 'none';
            toggleSidebar.style.boxShadow = '0 4px 12px rgba(0, 0, 0, 0.15)';
            toggleSidebar.style.cursor = 'pointer';
            document.body.appendChild(toggleSidebar);

            toggleSidebar.addEventListener('click', function() {
                const sidebar = document.querySelector('.sidebar');
                sidebar.style.display = sidebar.style.display === 'block' ? 'none' : 'block';
            });
        }
    </script>
