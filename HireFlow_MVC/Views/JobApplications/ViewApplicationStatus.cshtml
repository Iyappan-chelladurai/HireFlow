    <script>
        // Simple JavaScript for mobile menu toggle
        document.querySelector('.mobile-toggle').addEventListener('click', function() {
            const navMenu = document.querySelector('.nav-menu');
            navMenu.style.display = navMenu.style.display === 'flex' ? 'none' : 'flex';
        });

        // Simple JavaScript for demonstration purposes
        document.addEventListener('DOMContentLoaded', function() {
            const statusItems = document.querySelectorAll('.status');
            statusItems.forEach(item => {
                item.addEventListener('click', function() {
                    alert('Application Status: ' + this.textContent);
                });
            });

            const interviewItems = document.querySelectorAll('.interview-item');
            interviewItems.forEach(item => {
                item.addEventListener('click', function() {
                    const role = this.querySelector('h3').textContent;
                    alert('Interview details for: ' + role);
                });
            });
        });
    </script>
