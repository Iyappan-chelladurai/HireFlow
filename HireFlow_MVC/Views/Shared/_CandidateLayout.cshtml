<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - HireFlow_MVC</title>

    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/HireFlow_MVC.styles.css" asp-append-version="true" />
</head>
<body class="bg-gray-100 text-gray-800 min-h-screen flex">

    <!-- Sidebar -->
    <aside class="w-64 bg-white shadow-md hidden md:flex flex-col fixed h-full">
        <!-- Logo -->
        <div class="flex items-center gap-2 px-6 py-5 border-b border-gray-200">
            <span class="bg-indigo-600 text-white w-8 h-8 flex items-center justify-center rounded-full font-bold">H</span>
            <span class="text-xl font-bold text-indigo-600">HireFlow</span>
        </div>

        <!-- Navigation -->
        <nav class="flex-1 px-4 py-6 space-y-2">
            <a asp-controller="Home" asp-action="Index" class="block px-4 py-2 rounded-lg hover:bg-indigo-50 hover:text-indigo-700 font-medium">🏠 Home</a>
            <a asp-controller="Jobs" asp-action="Index" class="block px-4 py-2 rounded-lg hover:bg-indigo-50 hover:text-indigo-700 font-medium">💼 Jobs</a>
            <a asp-controller="Home" asp-action="Privacy" class="block px-4 py-2 rounded-lg hover:bg-indigo-50 hover:text-indigo-700 font-medium">🔒 Privacy</a>
        </nav>

        <!-- User Info -->
        <div class="border-t border-gray-200 px-4 py-4 flex items-center gap-3">
            <img src="https://i.pravatar.cc/40" alt="User" class="w-10 h-10 rounded-full border" />
            <div>
                <p class="text-sm font-semibold">Iyappan C</p>
                <a href="#" class="text-xs text-indigo-600 hover:underline">Logout</a>
            </div>
        </div>
    </aside>

    <!-- Main Content -->
    <div class="flex-1 md:ml-64 flex flex-col">
        
        <!-- Top Bar -->
        <header class="bg-white shadow-sm px-6 py-4 flex justify-between items-center">
            <!-- Search Bar -->
            <div class="relative w-full max-w-xs">
                <input type="text" placeholder="Search jobs..." 
                       class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring focus:ring-indigo-200 focus:border-indigo-500" />
                <svg xmlns="http://www.w3.org/2000/svg" 
                     class="h-5 w-5 absolute left-3 top-2.5 text-gray-400" 
                     fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                          d="M21 21l-4.35-4.35M17 10a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
            </div>
        </header>

        <!-- Main Content Body -->
        <main class="p-6 flex-grow">
            @RenderBody()
        </main>

    
    </div>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
