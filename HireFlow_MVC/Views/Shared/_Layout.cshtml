<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - HireFlow_MVC</title>

    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <link rel="stylesheet" href="~/HireFlow_MVC.styles.css" asp-append-version="true" />
</head>
<body class="bg-gray-50 text-gray-800 min-h-screen flex flex-col">

    <header class="bg-white shadow-md">
        <nav class="container mx-auto px-4 py-4 flex justify-between items-center">
            <a class="text-2xl font-bold text-indigo-600" asp-area="" asp-controller="Home" asp-action="Index">
                HireFlow_MVC
            </a>
            <ul class="flex space-x-6">
                <li><a class="text-gray-700 hover:text-indigo-600" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a class="text-gray-700 hover:text-indigo-600" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
            </ul>
        </nav>
    </header>

    <main role="main" class="container mx-auto px-4 py-6 flex-grow">
        @RenderBody()
    </main>

    <footer class="border-t border-gray-300 bg-white text-center py-4 text-sm text-gray-500">
        &copy; 2025 - HireFlow_MVC - <a class="text-indigo-600 hover:underline" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
